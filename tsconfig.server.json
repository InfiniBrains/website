{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "noEmit": false,
    "allowJs": false
  },
  "paths": {
    "@/*": ["./src/*"],
    "@/styles": ["./src/styles"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules"]
}