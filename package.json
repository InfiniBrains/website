{
  "scripts": {
    "front": "npm run dev --prefix frontend/",
    "back":  "npm run dev --prefix backend/",
    "clear": "npm run clear --prefix frontend/",
    "setup:frontend": "npm install --prefix frontend/",
    "setup:backend": "npm install --prefix backend/",
    "setup": "npm run setup:frontend && npm run setup:backend",
    "dev": "npm run clear && concurrently \"npm run back\" \"npm run front\""
  },
  "dependencies": {
    "concurrently": "^7.6.0"
  }
}
